{% extends "base.html.twig" %}


{% block body %}

<div style="font-size:22px; font-family:sans-serif">
    <div style="display: inline-block;">
        <div style="display: inline-block;">

        </div>
        <div style="display: inline-block; margin-left:550px; ">
            <p style="display: inline-block;">Invoice # : {{ invoice.id }}</p>
            <p style="display: inline-block;">Created : {{ invoice.creationDate|date("Y/m/s") }}</p>
        </div>
    </div>
    <div style="display: inline-block;width:100%; justify-content:space-between">
        <div style="display: inline-block;">
            <p style="display: inline-block;">{{invoice.CompagnyInformations}}</p>
        </div>
        <div style="display: inline-block;">
            <p style="display: inline-block;margin-left:600px; ">{{invoice.ClientInformations}}</p>
        </div>
    </div>
    <div>
        <div style="background-color:rgb(223, 223, 223)">
            <p style="font-weight: bold;display: inline-block; padding:0; margin:0">Itegrktjhyem</p>
            <p style="font-weight: bold;display: inline-block;  padding:0; margin:0;margin-left:600px;">Price</p>
        </div>
        {% for item in invoice.invoiceRows %}
            <div style=" border-top:solid rgb(223, 223, 223) 1px; padding:0; margin:0; padding-bottom:10px">
                <p style="display: inline-block;">{{item.name}}</p>
                <p style="display: inline-block;margin-left:550px; ">{{item.price}}</p>
            </div>
        {% endfor %}
        <div style="display: inline-block;border-top:solid rgb(181, 181, 181) 2px; padding-bottom:10px; width:600px">
            <p></p>
            <p style="display: inline-block;margin-left:550px;">{{ tot_command }}</p>
        </div>
    </div>
</div>

{% endblock %}